@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <p>No stylists have been added. Better get to hiring! =D</p>
}
@foreach (Stylist stylist in Model)
{
  <p>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</p>
}

<p>@Html.ActionLink("Add new stylist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>