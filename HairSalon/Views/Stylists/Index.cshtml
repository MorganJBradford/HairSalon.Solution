@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added. Better get to hiring! =D</h3>
}

@foreach (Stylist stylist in Model)
{
  <p>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</p>
}

<p>@Html.ActionLink("Add new stylist", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>