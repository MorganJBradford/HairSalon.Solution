@{
  Layout = "_Layout";
}
@model HairSalon.Models.Stylist;

<h2>Edit</h2>
<h3>Edit this stylist: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId);
  @Html.LabelFor(model => model.Name);
  @Html.EditorFor(model => model.Name);
  @Html.LabelFor(model => model.Specialty);
  @Html.EditorFor(model => model.Specialty);
  <input type="submit" value="Save"/>
}
<button>@Html.ActionLink("Home", "Index", "Home")</button>
<button>@Html.ActionLink("Back to Stylists", "Index")</button>