@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <p>No clients have been added! Better hire a marketing team.</p>
}
@foreach (Client client in Model)
{
  <p>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</p>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("All Clients", "Index")</p>
<p>@Html.ActionLink("All Stylists", "Index", "Stylists")</p>
<p>@Html.ActionLink("Add a new client", "Create")</p>