@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client;

@if (ViewBag.Stylists.Count < 1)
{
  <h2>There are no stylists to connect a client yet.</h2>
  @Html.ActionLink("Add a stylist", "Create", "Stylist");
  <br>
  @Html.ActionLink("Back home", "Index", "Home");
}
else
{
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name);
    @Html.TextBoxFor(model => model.Name);
    @Html.LabelFor(model => model.Stylist);
    @Html.DropDownList("StylistId")
    <input type="submit" value="Add new client"/>
  }
  <p>@Html.ActionLink("Back to all clients", "Index")</p>
}